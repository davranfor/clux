{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/users",
  "type": "object",
  "definitions": {
    "update": {
      "type": "object",
      "properties": {
        "name": { "type": "string", "minLength": 1, "maxLength": 100 },
        "tin": { "type": "string", "minLength": 1, "maxLength": 100 },
        "address": { "type": "string", "maxLength": 500 },
        "phone": { "type": "string", "maxLength": 100 },
        "email": { "type": "string", "format": "email" }
      },
      "additionalProperties": false,
      "required": [ "name", "tin", "address", "phone", "email" ]
    },
    "upsert": {
      "type": "object",
      "properties": {
        "workplace_id": { "type": "integer" },
        "category_id": { "type": "integer" },
        "role": { "type": "integer" },
        "hire_start": { "type": "string", "format": "date" },
        "hire_end": { "type": ["null", "string"], "format": "date" },
        "name": { "type": "string", "minLength": 1, "maxLength": 100 },
        "tin": { "type": "string", "minLength": 1, "maxLength": 100 },
        "address": { "type": "string", "maxLength": 500 },
        "phone": { "type": "string", "maxLength": 100 },
        "email": { "type": "string", "format": "email" }
      },
      "additionalProperties": false,
      "required": [ "workplace_id", "category_id", "role", "hire_start", "hire_end", "name", "tin", "address", "phone", "email" ]
    },
    "update.schedule": {
      "type": "object",
      "properties": {
        "schedule": { "type": "string", "minLength": 2 }
      },
      "additionalProperties": false,
      "required": [ "schedule" ]
    },
    "update.tasks": {
      "type": "object",
      "properties": {
        "tasks": { "type": "string", "minLength": 2 }
      },
      "additionalProperties": false,
      "required": [ "tasks" ]
    },
    "update.token": {
      "type": "object",
      "properties": {
        "email": { "type": "string", "format": "email" },
        "password": { "type": "string", "minLength": 6, "maxLength": 25 }
      },
      "additionalProperties": false,
      "required": [ "email", "password" ]
    }
  },
  "properties": {
    "GET": {
      "anyOf": [
        {
          "properties": {
            "path": { "items": [{}, { "const": "0" }], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /users/0", "size": 1, "role": 3 }
        },
        {
          "properties": {
            "path": { "items": [{}, { "x-mask": "09999" }], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /users/{id}", "role": 1 }
        },
        {
          "properties": {
            "path": { "items": [{}, { "x-mask": "09999" }, { "const": "schedule" }], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /users/{id}/schedule", "size": 2, "role": 1 }
        },
        {
          "properties": {
            "path": { "items": [{}, { "x-mask": "09999" }, { "const": "tasks" }], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /users/{id}/tasks", "size": 2, "role": 1 }
        },
        {
          "properties": {
            "path": { "items": [{}, { "const": "workplace" }], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /users/workplace", "size": 1, "role": 1 }
        },
        {
          "properties": {
            "path": { "items": [{}, { "x-mask": "09999" }, { "const": "workplace" }], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /users/{workplace_id}/workplace", "size": 2, "role": 3 }
        }
      ]
    },
    "POST": {
      "if": {
        "properties": {
          "path": { "items": [{}, { "x-mask": "09999" }], "additionalItems": false },
          "query": { "type": "null" },
          "cookie": { "properties": { "role": { "const": 3 } } }
        },
        "x-notify": { "path": "POST /users/{id}", "role": 3 }
      },
      "then": {
        "properties": { "content": { "$ref": "#/definitions/upsert" } }
      },
      "else": false
    },
    "PUT": {
      "if": {
        "properties": {
          "path": { "items": [{}, { "x-mask": "09999" }], "additionalItems": false },
          "query": { "type": "null" },
          "cookie": { "properties": { "role": { "enum": [1, 2] } } }
        },
        "x-notify": { "path": "PUT /users/{id}", "role": 1 }
      },
      "then": {
        "properties": { "content": { "$ref": "#/definitions/update" } }
      },
      "else": {
        "if": {
          "properties": {
            "path": { "items": [{}, { "x-mask": "09999" }], "additionalItems": false },
            "query": { "type": "null" },
            "cookie": { "properties": { "role": { "const": 3 } } }
          },
          "x-notify": { "path": "PUT /users/{id} role:admin", "role": 3 }
        },
        "then": {
          "properties": { "content": { "$ref": "#/definitions/upsert" } }
        },
        "else": false
      }
    },
    "PATCH": {
      "if": {
        "properties": {
          "path": { "items": [{}, { "x-mask": "09999" }, { "const": "clock_in" }], "additionalItems": false },
          "query": { "type": "null" },
          "content": { "type": "null" }
        },
        "x-notify": { "path": "PATCH /users/{id}/clock_in", "size": 2, "role": 1 }
      },
      "then": true,
      "else": {
        "if": {
          "properties": {
            "path": { "items": [{}, { "x-mask": "09999" }, { "const": "schedule" }], "additionalItems": false },
            "query": { "type": "null" }
          },
          "x-notify": { "path": "PATCH /users/{id}/schedule", "size": 2, "role": 2 }
        },
        "then": {
          "properties": { "content": { "$ref": "#/definitions/update.schedule" } }
        },
        "else": {
          "if": {
            "properties": {
              "path": { "items": [{}, { "x-mask": "09999" }, { "const": "tasks" }], "additionalItems": false },
              "query": { "type": "null" }
            },
            "x-notify": { "path": "PATCH /users/{id}/tasks", "size": 2, "role": 2 }
          },
          "then": {
            "properties": { "content": { "$ref": "#/definitions/update.tasks" } }
          },
          "else": false
        }
      }
    },
    "DELETE": {
      "if": {
        "properties": {
          "path": { "items": [{}, {"x-mask": "09999"}], "additionalItems": false },
          "query": { "type": "null" }
        },
        "x-notify": { "path": "DELETE /users/{id}", "role": 3 }
      },
      "then": true,
      "else": false
    }
  }
}

