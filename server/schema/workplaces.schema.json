{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/workplaces",
  "type": "object",
  "definitions": {
    "clock": {
      "type": "object",
      "properties": { "workplaces": { "type": "string" } },
      "additionalProperties": false,
      "required": [ "workplaces" ]
    }
  },
  "properties": {
    "GET": {
      "anyOf": [
        {
          "properties": {
            "path": { "minItems": 1, "maxItems": 1 },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /workplaces", "role": 1 }
        },
        {
          "properties": {
            "path": { "items": [{}, { "const": "team" }], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /workplaces/team", "role": 3 }
        }
      ]
    },
    "PATCH": {
      "if": {
        "properties": {
          "path": { "items": [{}, {"x-mask": "00"}, { "const": "clock_in" }], "additionalItems": false },
          "query": { "type": "null" }
        },
        "x-notify": { "path": "PATCH /workplaces/:hour/clock_in", "role": 3 }
      },
      "then": {
        "properties": { "content": { "$ref": "#/definitions/clock" } }
      },
      "else": {
        "if": {
          "properties": {
            "path": { "items": [{}, { "const": "force_clock_out" }], "additionalItems": false },
            "query": { "type": "null" }
          },
          "x-notify": { "path": "PATCH /workplaces/force_clock_out", "role": 3 }
        },
        "then": {
          "properties": { "content": { "$ref": "#/definitions/clock" } }
        },
        "else": {
          "if": {
            "properties": {
              "path": { "items": [{}, {"x-mask": "00"}, { "const": "clock_out_at" }], "additionalItems": false },
              "query": { "type": "null" }
            },
            "x-notify": { "path": "PATCH /workplaces/:hour/clock_out_at", "role": 3 }
          },
          "then": {
            "properties": { "content": { "$ref": "#/definitions/clock" } }
          },
          "else": {
            "if": {
              "properties": {
                "path": { "items": [{}, {"x-mask": "09"}, { "const": "crop_hours_to" }], "additionalItems": false },
                "query": { "type": "null" }
              },
              "x-notify": { "path": "PATCH /workplaces/:hours/crop_hours_to", "role": 3 }
            },
            "then": {
              "properties": { "content": { "$ref": "#/definitions/clock" } }
            },
            "else": false
          }
        }
      }
    }
  },
  "additionalProperties": false
}

