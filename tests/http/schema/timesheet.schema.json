{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/timesheet",
  "type": "object",
  "definitions": {
    "update": {
      "type": "object",
      "properties": {
        "workplace_id": { "type": "integer" },
        "clock_in": { "type": "string", "format": "date-time-local" },
        "clock_out": { "type": "string", "format": "date-time-local" }
      },
      "additionalProperties": false,
      "required": [ "workplace_id", "clock_in", "clock_out" ]
    },
    "request.update": {
      "type": "object",
      "properties": {
        "workplace_id": { "type": "integer" },
        "workplace_name": { "type": "string" },
        "clock_in": { "type": "string", "format": "date-time-local" },
        "clock_out": { "type": "string", "format": "date-time-local" },
        "reason": { "type": "string", "minLength": 1, "maxLength": 100 }
      },
      "additionalProperties": false,
      "required": [ "workplace_id", "workplace_name", "clock_in", "clock_out", "reason" ]
    },
    "request.delete": {
      "type": "object",
      "properties": {
        "reason": { "type": "string", "minLength": 1, "maxLength": 100 }
      },
      "additionalProperties": false,
      "required": [ "reason" ]
    }
  },
  "properties": {
    "GET": {
      "anyOf": [
        {
          "properties": {
            "path": { "minItems": 1, "maxItems": 1 },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /timesheet", "role": 1 }
        },
        {
          "properties": {
            "path": { "items": [{}, {"x-mask": "0999999"}], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /timesheet/{id}", "role": 1 }
        },
        {
          "properties": {
            "path": { "items": [{}, { "const": "week" }], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /timesheet/week", "size": 1, "role": 1 }
        }
      ]
    },
    "POST": {
      "if": {
        "properties": {
          "path": { "minItems": 1, "maxItems": 1 },
          "query": { "type": "null" },
          "content": { "type": "null" }
        },
        "x-notify": { "path": "POST /timesheet", "role": 1 }
      },
      "then": true,
      "else": false
    },
    "PUT": {
      "if": {
        "properties": {
          "path": { "items": [{}, {"x-mask": "0999999"}], "additionalItems": false },
          "query": { "type": "null" }
        },
        "x-notify": { "path": "PUT /timesheet/{id}", "role": 3 }
      },
      "then": {
        "properties": { "content": { "$ref": "#/definitions/update" } }
      },
      "else": false
    },
    "PATCH": {
      "if": {
        "properties": {
          "path": { "items": [{}, {"x-mask": "0999999"}, { "const": "request" }, { "const": "update" }], "additionalItems": false },
          "query": { "type": "null" }
        },
        "x-notify": { "path": "PATCH /timesheet/{id}/request/update", "size": 2, "role": 1 }
      },
      "then": {
        "properties": { "content": { "$ref": "#/definitions/request.update" } }
      },
      "else": {
        "if": {
          "properties": {
            "path": { "items": [{}, {"x-mask": "0999999"}, { "const": "request" }, { "const": "delete" }], "additionalItems": false },
            "query": { "type": "null" }
          },
          "x-notify": { "path": "PATCH /timesheet/{id}/request/delete", "size": 2, "role": 1 }
        },
        "then": {
          "properties": { "content": { "$ref": "#/definitions/request.delete" } }
        },
        "else": {
          "if": {
            "properties": {
              "path": { "items": [{}, {"x-mask": "0999999"}, { "const": "request" }, { "const": "clear" }], "additionalItems": false },
              "query": { "type": "null" },
              "content": { "type": "null" }
            },
            "x-notify": { "path": "PATCH /timesheet/{id}/request/clear", "size": 2, "role": 1 }
          },
          "then": true,
          "else": false
        }
      }
    },
    "DELETE": {
      "if": {
        "properties": {
          "path": { "items": [{}, {"x-mask": "0999999"}], "additionalItems": false },
          "query": { "type": "null" }
        },
        "x-notify": { "path": "DELETE /timesheet/{id}", "role": 3 }
      },
      "then": true,
      "else": false
    }
  },
  "additionalProperties": false
}

