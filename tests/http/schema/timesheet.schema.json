{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/timesheet.schema",
  "definitions": {
    "update": {
      "type": "object",
      "properties": {
        "workplace_id": { "type": "integer" },
        "clock_in": { "type": "string", "format": "date-time-local", "minLength": 1 },
        "clock_out": { "type": "string", "format": "date-time-local", "minLength": 1 }
      },
      "additionalProperties": false,
      "required": [ "workplace_id", "clock_in", "clock_out" ]
    },
    "request.update": {
      "type": "object",
      "properties": {
        "workplace_id": { "type": "integer" },
        "workplace_name": { "type": "string" },
        "clock_in": { "type": "string", "format": "date-time-local", "minLength": 1 },
        "clock_out": { "type": "string", "format": "date-time-local", "minLength": 1 },
        "reason": { "type": "string", "minLength": 1, "maxLength": 100 }
      },
      "additionalProperties": false,
      "required": [ "workplace_id", "workplace_name", "clock_in", "clock_out", "reason" ]
    },
    "request.delete": {
      "type": "object",
      "properties": {
        "reason": { "type": "string", "minLength": 1, "maxLength": 100 }
      },
      "additionalProperties": false,
      "required": [ "reason" ]
    }
  }
}

