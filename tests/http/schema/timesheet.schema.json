{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/timesheet",
  "type": "object",
  "definitions": {
    "upsert": {
      "type": "object",
      "properties": {
        "workplace_id": { "type": "integer" },
        "clock_in": { "type": "string", "format": "date-time-local" },
        "clock_out": { "type": "string", "format": "date-time-local" }
      },
      "additionalProperties": false,
      "required": [ "workplace_id", "clock_in", "clock_out" ]
    },
    "request.insert": {
      "type": "object",
      "properties": {
        "workplace_id": { "type": "integer" },
        "clock_in": { "type": "string", "format": "date-time-local" },
        "clock_out": { "type": "string", "format": "date-time-local" },
        "reason": { "type": "string", "minLength": 1, "maxLength": 100 }
      },
      "additionalProperties": false,
      "required": [ "workplace_id", "clock_in", "clock_out", "reason" ]
    },
    "request.update": {
      "type": "object",
      "properties": {
        "workplace_id": { "type": "integer" },
        "workplace_name": { "type": "string" },
        "clock_in": { "type": "string", "format": "date-time-local" },
        "clock_out": { "type": "string", "format": "date-time-local" },
        "reason": { "type": "string", "minLength": 1, "maxLength": 100 }
      },
      "additionalProperties": false,
      "required": [ "workplace_id", "workplace_name", "clock_in", "clock_out", "reason" ]
    }
  },
  "properties": {
    "GET": {
      "anyOf": [
        {
          "properties": {
            "path": { "minItems": 1, "maxItems": 1 },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /timesheet", "role": 1 }
        },
        {
          "properties": {
            "path": { "items": [{}, {"x-mask": "0999999"}], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /timesheet/{id}", "role": 1 }
        },
        {
          "properties": {
            "path": { "items": [{}, {"const": "empty"}], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /timesheet/empty", "size": 1, "role": 1 }
        },
        {
          "properties": {
            "path": { "items": [{}, { "const": "week" }], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /timesheet/week", "size": 1, "role": 1 }
        },
        {
          "properties": {
            "path": { "items": [{}, {"x-mask": "'20'00"}, {"x-mask": "00"}, { "const": "month" }], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /timesheet/{year}/{month}/month", "size": 3, "role": 1 }
        }
      ]
    },
    "POST": {
      "if": {
        "properties": {
          "path": { "minItems": 1, "maxItems": 1 },
          "query": { "type": "null" },
          "content": { "type": "null" }
        },
        "x-notify": { "path": "POST /timesheet content:none", "role": 1 }
      },
      "then": true,
      "else": {
        "if": {
          "properties": {
            "path": { "minItems": 1, "maxItems": 1 },
            "query": { "type": "null" },
            "cookie": { "properties": { "role": { "enum": [1, 2] } } }
          },
          "x-notify": { "path": "POST /timesheet role:basic,supervisor", "role": 1 }
        },
        "then": {
          "properties": { "content": { "$ref": "#/definitions/request.insert" } }
        },
        "else": { 
          "if": {
            "properties": {
              "path": { "minItems": 1, "maxItems": 1 },
              "query": { "type": "null" },
              "cookie": { "properties": { "role": { "const": 3 } } }
            },
            "x-notify": { "path": "POST /timesheet role:admin", "role": 1 }
          },
          "then": {
            "properties": { "content": { "$ref": "#/definitions/upsert" } }
          },
          "else": false
        }
      }
    },
    "PUT": {
      "if": {
        "properties": {
          "path": { "items": [{}, {"x-mask": "0999999"}], "additionalItems": false },
          "query": { "type": "null" }
        },
        "x-notify": { "path": "PUT /timesheet/{id}", "role": 3 }
      },
      "then": {
        "properties": { "content": { "$ref": "#/definitions/upsert" } }
      },
      "else": false
    },
    "PATCH": {
      "if": {
        "properties": {
          "path": { "items": [{}, {"x-mask": "0999999"}, { "const": "request" }], "additionalItems": false },
          "query": { "type": "null" },
          "content": { "type": "null" }
        },
        "x-notify": { "path": "PATCH /timesheet/{id}/request content:none", "size": 2, "role": 1 }
      },
      "then": true,
      "else": {
        "if": {
          "properties": {
            "path": { "items": [{}, {"x-mask": "0999999"}, { "const": "request" }], "additionalItems": false },
            "query": { "type": "null" }
          },
          "x-notify": { "path": "PATCH /timesheet/{id}/request", "size": 2, "role": 1 }
        },
        "then": {
          "properties": { "content": { "$ref": "#/definitions/request.update" } }
        },
        "else": false
      }
    },
    "DELETE": {
      "if": {
        "properties": {
          "path": { "items": [{}, {"x-mask": "0999999"}], "additionalItems": false },
          "query": { "type": "null" }
        },
        "x-notify": { "path": "DELETE /timesheet/{id}", "role": 1 }
      },
      "then": true,
      "else": false
    }
  },
  "additionalProperties": false
}

