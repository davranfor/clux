{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/users",
  "type": "object",
  "definitions": {
    "pathArray": {
      "type": "array",
      "items": [{}, { "x-mask": "09999" }],
      "additionalItems": false
    }
  },
  "properties": {
    "GET": {
      "if": {
          "properties": {
            "path": { "items": [{}, { "x-mask": "09999" }], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "users.default" }
      },
      "then": true, 
      "else": false
    },
    "POST": {
      "if": {
          "properties": {
            "path": { "minItems": 1, "maxItems": 1 },
            "query": { "type": "null" }
          },
          "x-notify": { "path": "users.default" }
      },
      "then": {
        "properties": {
          "content": {
            "$ref": "/users.schema/definitions/content",
            "$ref": "/users.schema/definitions/contentRequired"
          }
        }
      },
      "else": false
    },
    "PUT": {
      "if": {
          "properties": {
            "path": { "items": [{}, { "x-mask": "09999" }], "additionalItems": false },
            "query": { "type": "null" }
          },
          "x-notify": { "path": "users.default" }
      },
      "then": {
        "properties": {
          "content": {
            "$ref": "/users.schema/definitions/content",
            "$ref": "/users.schema/definitions/contentRequired"
          }
        }
      },
      "else": false
    },
    "PATCH": {
      "properties": {
        "path": { "$ref": "#/definitions/pathArray" },
        "query": { "type": "null" },
        "content": {
            "$ref": "/users.schema/definitions/content",
            "minProperties": 1
        }
      }
    },
    "DELETE": {
      "properties": {
        "path": { "$ref": "#/definitions/pathArray" },
        "query": { "type": "null" },
        "content": { "type": "null" }
      }
    }
  }
}

