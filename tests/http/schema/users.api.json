{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/users",
  "type": "object",
  "properties": {
    "GET": {
      "if": {
        "anyOf": [
          {
            "properties": {
              "path": { "minItems": 1, "maxItems": 1 },
              "query": { "type": "null" },
              "content": { "type": "null" }
            },
            "x-notify": { "path": "users.all" }
          },
          {
            "properties": {
              "path": { "items": [{}, { "x-mask": "099999" }], "additionalItems": false },
              "query": { "type": "null" },
              "content": { "type": "null" }
            },
            "x-notify": { "path": "users.default" }
          }
        ]
      },
      "then": true, 
      "else": false
    },
    "POST": {
      "if": {
        "properties": {
          "path": { "minItems": 1, "maxItems": 1 },
          "query": { "type": "null" }
        },
        "x-notify": { "path": "users.default" }
      },
      "then": {
        "properties": {
          "content": {
            "$ref": "/users.schema/definitions/content",
            "$ref": "/users.schema/definitions/contentRequired"
          }
        }
      },
      "else": false
    },
    "PUT": {
      "if": {
        "properties": {
          "path": { "items": [{}, { "x-mask": "099999" }], "additionalItems": false },
          "query": { "type": "null" }
        },
        "x-notify": { "path": "users.default" }
      },
      "then": {
        "properties": {
          "content": {
            "$ref": "/users.schema/definitions/content",
            "$ref": "/users.schema/definitions/contentRequired"
          }
        }
      },
      "else": false
    },
    "PATCH": {
        "not": { "title": "Method not allowed" }
    },
    "DELETE": {
      "if": {
        "properties": {
          "path": { "items": [{}, { "x-mask": "099999" }], "additionalItems": false },
          "query": { "type": "null" },
          "content": { "type": "null" }
        },
        "x-notify": { "path": "users.default" }
      },
      "then": true,
      "else": false
    }
  }
}

