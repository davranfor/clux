{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/users",
  "type": "object",
  "properties": {
    "GET": {
      "anyOf": [
        {
          "properties": {
            "path": { "items": [{}, { "const": "edit" }], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "users.select.edit", "size": 1, "role": 1 }
        },
        {
          "properties": {
            "path": { "items": [{}, { "const": "schedule" }], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "users.select.schedule", "size": 1, "role": 1 }
        }
      ]
    },
    "PUT": {
      "if": {
        "properties": {
          "path": { "items": [{}, { "const": "update" }], "additionalItems": false },
          "query": { "type": "null" },
          "cookie": { "properties": { "role": { "enum": [1, 2] } } }
        },
        "x-notify": { "path": "users.update", "size": 1, "role": 1 }
      },
      "then": {
        "properties": { "content": { "$ref": "/users.schema/definitions/update" } }
      },
      "else": {
        "if": {
          "properties": {
            "path": { "items": [{}, { "const": "update" }], "additionalItems": false },
            "query": { "type": "null" },
            "cookie": { "properties": { "role": { "const": 3 } } }
          },
          "x-notify": { "path": "users.update.all", "size": 1, "role": 3 }
        },
        "then": {
          "properties": { "content": { "$ref": "/users.schema/definitions/update.all" } }
        },
        "else": false
      }
    }
  }
}

