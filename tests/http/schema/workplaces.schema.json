{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/workplaces",
  "type": "object",
  "properties": {
    "GET": {
      "if": {
        "properties": {
          "path": { "minItems": 1, "maxItems": 1 },
          "query": { "type": "null" },
          "content": { "type": "null" }
        },
        "x-notify": { "path": "GET /workplaces", "role": 3 }
      },
      "then": true,
      "else": false
    },
    "PATCH": {
      "if": {
        "properties": {
          "path": { "items": [{}, { "x-mask": "09999" }, { "const": "clock_in" }], "additionalItems": false },
          "query": { "type": "null" },
          "content": { "type": "null" }
        },
        "x-notify": { "path": "PATCH /workplaces/{id}/clock_in", "size": 2, "role": 3 }
      },
      "then": true,
      "else": false
    }
  },
  "additionalProperties": false
}

