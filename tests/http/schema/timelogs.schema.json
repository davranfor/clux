{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/timelogs",
  "type": "object",
  "definitions": {
    "insert": {
      "type": "object",
      "properties": {
        "workplace_id": { "type": "integer" },
        "user_id": { "type": "integer" },
        "clock_in": { "type": "string", "format": "date-time-local" },
        "clock_out": { "type": "string", "format": "date-time-local" }
      },
      "additionalProperties": false,
      "required": [ "workplace_id", "user_id", "clock_in", "clock_out" ]
    },
    "update": {
      "type": "object",
      "properties": {
        "workplace_id": { "type": "integer" },
        "clock_in": { "type": "string", "format": "date-time-local" },
        "clock_out": { "type": "string", "format": "date-time-local" }
      },
      "additionalProperties": false,
      "required": [ "workplace_id", "clock_in", "clock_out" ]
    },
    "request.insert": {
      "type": "object",
      "properties": {
        "workplace_id": { "type": "integer" },
        "user_id": { "type": "integer" },
        "clock_in": { "type": "string", "format": "date-time-local" },
        "clock_out": { "type": "string", "format": "date-time-local" },
        "reason": { "type": "string", "minLength": 1, "maxLength": 100 }
      },
      "additionalProperties": false,
      "required": [ "workplace_id", "user_id", "clock_in", "clock_out", "reason" ]
    },
    "request.update": {
      "type": "object",
      "properties": {
        "workplace_id": { "type": "integer" },
        "workplace_name": { "type": "string" },
        "clock_in": { "type": "string", "format": "date-time-local" },
        "clock_out": { "type": "string", "format": "date-time-local" },
        "reason": { "type": "string", "minLength": 1, "maxLength": 100 }
      },
      "additionalProperties": false,
      "required": [ "workplace_id", "workplace_name", "clock_in", "clock_out", "reason" ]
    }
  },
  "properties": {
    "GET": {
      "anyOf": [
        {
          "properties": {
            "path": { "minItems": 1, "maxItems": 1 },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /timelogs", "role": 1 }
        },
        {
          "properties": {
            "path": { "items": [{}, {"x-mask": "0999999"}], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /timelogs/{id}", "role": 1 }
        },
        {
          "properties": {
            "path": { "items": [{}, {"x-mask": "09999"}, {"const": "empty"}], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /timelogs/{user_id}/empty", "size": 2, "role": 1 }
        },
        {
          "properties": {
            "path": { "items": [{}, {"x-mask": "09999"}, { "const": "week" }], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /timelogs/{user_id}/week", "size": 2, "role": 1 }
        },
        {
          "properties": {
            "path": { "items": [{}, {"x-mask": "09999"}, {"x-mask": "'20'00"}, {"x-mask": "00"}, { "const": "month" }], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "GET /timelogs/{user_id}/{year}/{month}/month", "size": 4, "role": 1 }
        }
      ]
    },
    "POST": {
      "if": {
        "properties": {
          "path": { "minItems": 1, "maxItems": 1 },
          "query": { "type": "null" },
          "cookie": { "properties": { "role": { "enum": [1, 2] } } }
        },
        "x-notify": { "path": "POST /timelogs role:basic", "role": 1 }
      },
      "then": {
        "properties": { "content": { "$ref": "#/definitions/request.insert" } }
      },
      "else": {
        "if": {
          "properties": {
            "path": { "minItems": 1, "maxItems": 1 },
            "query": { "type": "null" },
            "cookie": { "properties": { "role": { "const": 3 } } }
          },
          "x-notify": { "path": "POST /timelogs role:supervisor,admin", "role": 3 }
        },
        "then": {
          "properties": { "content": { "$ref": "#/definitions/insert" } }
        },
        "else": false
      }
    },
    "PUT": {
      "if": {
        "properties": {
          "path": { "items": [{}, {"x-mask": "0999999"}], "additionalItems": false },
          "query": { "type": "null" }
        },
        "x-notify": { "path": "PUT /timelogs/{id}", "role": 3 }
      },
      "then": {
        "properties": { "content": { "$ref": "#/definitions/update" } }
      },
      "else": {
        "if": {
          "properties": {
            "path": { "items": [{}, {"x-mask": "0999999"}, { "const": "approve" }], "additionalItems": false },
            "query": { "type": "null" },
            "content": { "type": "null" }
          },
          "x-notify": { "path": "PUT /timelogs/{id}/approve", "size": 2, "role": 2 }
        },
        "then": true,
        "else": false
      }
    },
    "PATCH": {
      "if": {
        "properties": {
          "path": { "items": [{}, {"x-mask": "0999999"}, { "const": "request" }], "additionalItems": false },
          "query": { "type": "null" },
          "content": { "type": "null" }
        },
        "x-notify": { "path": "PATCH /timelogs/{id}/request content:none", "size": 2, "role": 1 }
      },
      "then": true,
      "else": {
        "if": {
          "properties": {
            "path": { "items": [{}, {"x-mask": "0999999"}, { "const": "request" }], "additionalItems": false },
            "query": { "type": "null" }
          },
          "x-notify": { "path": "PATCH /timelogs/{id}/request", "size": 2, "role": 1 }
        },
        "then": {
          "properties": { "content": { "$ref": "#/definitions/request.update" } }
        },
        "else": false
      }
    },
    "DELETE": {
      "if": {
        "properties": {
          "path": { "items": [{}, {"x-mask": "0999999"}], "additionalItems": false },
          "query": { "type": "null" }
        },
        "x-notify": { "path": "DELETE /timelogs/{id}", "role": 1 }
      },
      "then": true,
      "else": false
    }
  },
  "additionalProperties": false
}

