{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "title": "Vehicle Information",
  "type": "object",
  "properties": {
    "vehicleType": {
      "type": "string",
      "enum": ["car", "bike"]
    },
    "engineCapacity": {
      "type": "number"
    },
    "numberOfWheels": {
      "type": "integer"
    }
  },
  "if": {
    "properties": { "vehicleType": { "const": "car" } }
  },
  "then": {
    "required": ["engineCapacity"],
    "properties": {
      "engineCapacity": {
        "minimum": 1000,
        "description": "Cars must have an engine capacity of at least 1000cc."
      },
      "numberOfWheels": {
        "const": 4,
        "description": "Cars must have 4 wheels."
      }
    }
  },
  "else": {
    "properties": {
      "engineCapacity": {
        "maximum": 500,
        "description": "Bikes must have an engine capacity of no more than 500cc."
      },
      "numberOfWheels": {
        "const": 2,
        "description": "Bikes must have 2 wheels."
      }
    }
  }
}

